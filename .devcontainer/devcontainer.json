{
  "name": "Classroom Python Codespace",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.9",
  
  "customizations": {
    "vscode": {
      "settings": {
        // [1] Desativa explicitamente as sugestões em linha do editor (Geral)
        "editor.inlineSuggest.enabled": false,
        
        // [2] Desativa o GitHub Copilot para todas as linguagens
        // O valor deve ser um objeto, onde "*" se aplica a tudo.
        "github.copilot.enable": {
          "*": false
        },
        
        // [3] Desativa a interface do Copilot Chat e outros recursos de IA
        "chat.disableAIFeatures": true
      },
      
      "extensions": [
        // Manter as extensões de Python
        "ms-python.python",
        "ms-python.vscode-pylance"
        // Pode remover a extensão do Copilot se a vir instalada
        // "github.copilot", 
        // "github.copilot-chat"
      ]
    }
  },
  
  // A sua configuração de base (mantida)
  "postCreateCommand": "pip install -r requirements.txt"
}
